{
    "name": "plank/publisher",
    "description": "A workflow for publishing content in Laravel applications.",
    "keywords": [
        "Plank",
        "laravel",
        "publisher"
    ],
    "homepage": "https://github.com/plank/publisher",
    "license": "MIT",
    "authors": [
        {
            "name": "Kurt Friars",
            "email": "kfriars@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^10",
        "plank/laravel-hush": "^10.1",
        "plank/laravel-model-resolver": "^10.0.1",
        "plank/laravel-schema-events": "^10.2",
        "spatie/laravel-package-tools": "^1.14.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.10.0",
        "orchestra/testbench": "^8.22.0",
        "pestphp/pest": "^2.20",
        "pestphp/pest-plugin-arch": "^2.5",
        "pestphp/pest-plugin-laravel": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Plank\\Publisher\\": "src/",
            "Plank\\Publisher\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Plank\\Publisher\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-publisher --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Plank\\Publisher\\PublisherServiceProvider"
            ],
            "aliases": {
                "Publisher": "Plank\\Publisher\\Facades\\Publisher"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}